# Web App Environment Variables
# Copy to .env.local for local development

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Cloudflare R2
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=estimator-assets
# Optional: Override endpoint (defaults to https://{R2_ACCOUNT_ID}.r2.cloudflarestorage.com)
# R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# DocRaptor PDF
DOCRAPTOR_API_KEY=your-docraptor-api-key
# Set to 'true' to use test mode (free, watermarked PDFs)
DOCRAPTOR_TEST_MODE=true

# Postmark Email
POSTMARK_API_TOKEN=your-postmark-token
POSTMARK_FROM_EMAIL=quotes@yourdomain.com

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Cloudflare Worker (Queue)
CLOUDFLARE_WORKER_URL=http://localhost:8787
CLOUDFLARE_WORKER_TOKEN=your-worker-auth-token

# WhatsApp Business API
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=your-meta-app-secret
WHATSAPP_ENCRYPTION_KEY=your-32-char-encryption-key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
